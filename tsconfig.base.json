{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": false,
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "@decisiongraph/core": [
        "packages/core/src/index.ts"
      ],
      "@decisiongraph/schema": [
        "packages/schema/src/index.ts"
      ]
    }
  }
}
